    <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"/>


